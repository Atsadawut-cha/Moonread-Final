<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9D9D9"
    android:padding="5dp"
    tools:context=".EditStatusActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#1F275B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำสั่งซื้อ"/>

    <TextView

        android:id="@+id/OrD_orderID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="หมายเลขสั่งซื้อ :"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#1F275B"
        android:background="#CCFFCC"
        android:textSize="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:id="@+id/recycler_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#CCFFCC"
        android:scrollbars="vertical" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCFFCC">

        <TableRow android:layout_width="363dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="สถานะคำสั่งซื้อ :"
                android:textColor="#1F275B"
                android:textSize="20dp" />

            <TextView
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Test"
                android:textColor="#1F275B"
                android:textSize="20dp" />

        </TableRow>
    </TableLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CCFFCC">
    <Button
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1F275B"
        android:text="แก้ไขสถานะคำสั่งซื้อ"
        android:textColor="#fff"
        android:layout_centerInParent="true"/>

</RelativeLayout>



</LinearLayout>